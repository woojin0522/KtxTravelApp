<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".temaActivity.temaFragments.festivalDescriptionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/festival_info_image"
            android:src="@drawable/notimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:transitionName="imgTrans"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/festival_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="축제명 : "
            android:textSize="18dp" />
        <TextView
            android:id="@+id/festival_info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="주소 : "
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/festival_info_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="전화번호 : "
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/festival_info_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="홈페이지 : "
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/festival_info_nearStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="주변역 : "
            android:textSize="18dp" />
        <TextView
            android:id="@+id/festival_info_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="축제/공연/행사 기간 :  ~  "
            android:textSize="18dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/festival_info_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="5dp"
            android:text="설명"
            android:textAlignment="textStart"
            android:scrollbars="vertical"
            android:autoLink="web"
            android:textSize="16dp"/>
    </LinearLayout>
</FrameLayout>