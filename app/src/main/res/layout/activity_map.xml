<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mapActivity.MapActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/map_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/map_backBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/baseline_keyboard_arrow_left_24"
                        android:background="@color/main_app_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/title_activity_map"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/map_drawer_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:background="@color/main_app_color"
                        android:src="@drawable/hambuger_icon" />
                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/current_ktx_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="노선을 선택해주세요."
                        android:textColor="@color/white"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:textSize="17dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/marker_delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="■ 표시 마커 없음"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:textSize="17dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/station_line_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="■ 노선 경로 표시하기"
                    android:textSize="17dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white"
                    android:layout_gravity="end"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마커 거리조절(500m단위)"
                        android:textSize="15dp"
                        android:layout_marginHorizontal="5dp"
                        android:textColor="@color/white"/>
                    <SeekBar
                        android:id="@+id/map_seekBar"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:progressBackgroundTint="@color/white"
                        android:max="4"/>
                    <TextView
                        android:id="@+id/map_max_dist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0m"
                        android:textSize="15dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map_fragment"
                    android:name="com.naver.maps.map.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:navermap_latitude="37.555"
                    app:navermap_longitude="126.971"
                    app:navermap_zoom="15">
                </androidx.fragment.app.FragmentContainerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left|bottom"
                        android:layout_margin="5dp">
                        <com.naver.maps.map.widget.LocationButtonView
                            android:id="@+id/info_window_location_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="5dp"/>
                        <com.naver.maps.map.widget.LogoView
                            android:id="@+id/info_window_logoview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginHorizontal="6dp"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/info_window_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:visibility="gone"
                        android:background="@drawable/round_edge">
                        <ImageView
                            android:id="@+id/info_window_image"
                            android:src="@drawable/notimage"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/info_window_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:text="역 이름 : 서울역"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/info_window_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textAlignment="center"
                            android:text="주소 : "
                            android:textSize="15dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/info_window_dist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:textAlignment="center"
                            android:text="역에서 거리 : "
                            android:textSize="15dp"
                            android:textColor="@color/black"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/black"/>
                        <TextView
                            android:id="@+id/info_window_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginVertical="5dp"
                            android:text="정보창 클릭시 \n상세정보를 확인하실 수 있습니다."
                            android:textSize="15dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/map_nav_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:headerLayout="@layout/map_drawer_header"
        app:menu="@menu/map_drawer_menu_list" />
</androidx.drawerlayout.widget.DrawerLayout>