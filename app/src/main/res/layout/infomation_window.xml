<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        <!--<ImageView
            android:id="@+id/info_window_image"
            android:src="@drawable/notimage"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"/>-->
        <TextView
            android:id="@+id/info_window_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="역 이름 : 서울역"
            android:textSize="15dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info_window_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="center"
            android:text="주소 : "
            android:textSize="15dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/info_window_dist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="center"
            android:text="역에서 거리 : "
            android:textSize="15dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/info_window_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="정보창 클릭시 \n상세정보를 확인하실 수 있습니다."
            android:textSize="15dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>